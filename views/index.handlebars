<h1>Der Burger!</h1>

<h2>Burgers that have yet to be devoured</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
    {{burger_name}}
    {{!-- <button class="change-devoured" data-id="{{id}}">Click to devour</button> --}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that have been devoured</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{burger_name}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger-name">Burger Name:</label>
    <input type="text" id="burger-name" name="name">
  </div>

  <div class="form-group">
    <label for="burger-devoured">Devoured?</label><br>
    <input type="radio" name="burger-devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="burger-devoured" value="0"> Not devoured!
  </div>

  <button type="submit">Add Burger</button>
</form>
