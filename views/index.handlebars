<div class="container">
  <div class="header">
    <h1 class="index-title">Der Burger!</h1>
  </div>

  <div class="row">
    <div class="col1">
      <ul>
        <h2>Burgers that have yet to be devoured</h2>

        {{#each burgers}}
        {{#unless devoured}}
        <div class="img-container">
          <h5>{{burger_name}}</h5>
          <button class="change-devoured" data-id="{{id}}">Click to devour</button>
        </div>
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col2">
      <ul>
        <h2>Burgers that have been devoured</h2>

        {{#each burgers}}
        {{#if devoured}}
        <h5>{{burger_name}}</h5>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row2">
    <div>
      <h2>Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="burger-name">Burger Name:</label>
          <input type="text" id="burger-name" name="name">
        </div>

        <div class="form-group">
          <label for="burger-devoured"></label><br>
          <input type="radio" name="burger-devoured" value="1"> Devoured<br>
          <input type="radio" name="burger-devoured" value="0" checked> Not devoured
        </div>

        <button type="submit">Add Burger</button>
      </form>
    </div>
  </div>
</div>